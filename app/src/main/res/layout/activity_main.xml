<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <com.anthony.diffusionview.View.DiffusionView
    android:id="@+id/diffusionView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:diffusion_type="1"
    app:layout_constraintBottom_toTopOf="@+id/diffusionView2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <com.anthony.diffusionview.View.DiffusionView
    android:id="@+id/diffusionView2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:diffusion_type="0"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/diffusionView"/>

</androidx.constraintlayout.widget.ConstraintLayout>